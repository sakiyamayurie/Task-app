<!DOCTYPE html>
<% provide(:title, "index") %>
<html>
  <head>
    <title>管理者 | Task App</title>
  </head>
    <div class="main tasks-index">
      <div class="container">
      <h1>管理者のタスク一覧</h1>
        <% @tasks.each do |task| %>
          <div class="tasks-index-item">
            <%= task %>
          </div>
        <% end %>
      <div class="row">       
        <div class="col-md-10 col-md-offset-1">
          <a class="btn btn-lg btn-primary pull-right" href="/users/1/tasks/new">タスク新規作成</a>
            <table class="table table-hover" id="table-tasks">
              <thead>
                <tr>
                  <th>名称</th>
                  <th>作成日</th>
                  <th></th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
</html>